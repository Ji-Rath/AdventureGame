<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="Continue"
            android:layout_width="167dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_travel"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="39dp" android:visibility="invisible" android:layout_marginEnd="19dp"
            android:layout_toEndOf="@+id/btn_restup"
            android:layout_alignBottom="@+id/btn_restup" android:layout_alignParentEnd="true" android:textSize="18sp"
            android:fontFamily="monospace" android:textStyle="bold" style="@style/Widget.AppCompat.Button.Borderless"/>
    <Button
            android:text="Setup Camp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_restup"
            android:layout_alignParentBottom="true" android:layout_marginBottom="58dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="15dp" android:visibility="invisible" android:layout_marginEnd="0dp"
            android:layout_alignEnd="@+id/txt_details" android:layout_width="171dp"
            android:layout_alignParentStart="true" android:fontFamily="monospace" android:textSize="18sp"
            android:textStyle="bold" style="@style/Widget.AppCompat.Button.Borderless"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="179dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_minorevent"
            android:textSize="20sp" android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="195dp" android:visibility="visible" android:fontFamily="sans-serif-smallcaps"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="134dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_details2"
            android:textSize="18sp" android:textAlignment="center"
            android:layout_alignTop="@+id/pb_travel" android:layout_marginTop="8dp"
            android:layout_above="@+id/btn_restup" android:layout_marginBottom="-8dp"
            android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:layout_alignParentTop="true" android:layout_marginTop="108dp"
            android:id="@+id/img_travel_p1" android:contentDescription="Main Background"
            android:layout_alignParentStart="true" android:layout_marginStart="239dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="101dp"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="114dp"
            android:layout_alignParentTop="true" android:layout_marginTop="74dp"
            android:id="@+id/img_travel_p3" android:contentDescription="Main Background"
            android:layout_alignParentStart="true" android:layout_marginStart="184dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="155dp"
    />
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="104dp"
            android:layout_alignParentTop="true" android:layout_marginTop="85dp"
            android:id="@+id/img_travel_p2" android:contentDescription="Main Background"
            android:layout_alignParentStart="true" android:layout_marginStart="296dp"
            android:layout_alignParentEnd="true" android:layout_marginEnd="51dp"
    />
    <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="116dp"
            android:id="@+id/pb_travel" android:layout_marginTop="82dp" android:layout_below="@+id/txt_main"
            android:layout_alignParentBottom="true" android:layout_marginBottom="124dp"
            android:max="100" android:progress="0" android:indeterminate="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/pb_travelbar" android:layout_alignParentBottom="true" android:layout_marginBottom="13dp"/>

</RelativeLayout>