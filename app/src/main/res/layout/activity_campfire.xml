<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/layout">
    <Button
            android:text="Travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_travel"
            android:layout_alignStart="@+id/txt_main" android:layout_marginLeft="0dp"
            android:layout_above="@+id/btn_rest" android:layout_marginBottom="9dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:fontFamily="monospace" android:textSize="18sp"
            android:textStyle="bold"/>
    <Button
            android:text="Rest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_rest"
            android:layout_alignStart="@+id/txt_main"
            android:layout_above="@+id/btn_status" android:layout_marginBottom="14dp"
            style="@style/Widget.AppCompat.Button.Borderless" android:textStyle="bold" android:textSize="18sp"
            android:fontFamily="monospace"/>
    <Button
            android:text="Status"
            android:layout_width="match_parent"
            tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_status"
            android:layout_alignParentBottom="true" android:layout_marginBottom="54dp"
            android:layout_alignStart="@+id/txt_main" android:layout_marginLeft="0dp"
            android:layout_height="wrap_content" style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="monospace"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:id="@+id/pb_main" android:progressTint="@color/colorAccent"
            android:max="100" android:progress="0" android:indeterminate="false"
            android:layout_alignParentBottom="true" android:layout_marginBottom="16dp"/>
    <TextView
            android:text="Time/Location"
            android:layout_width="match_parent"
            android:layout_height="56dp" android:id="@+id/txt_camptime" android:layout_marginTop="334dp"
            android:layout_alignParentTop="true" android:textAlignment="center" android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" android:textStyle="bold"/>
    <ImageView
            android:layout_width="386dp"
            android:layout_height="241dp"
            android:id="@+id/img_camp" android:layout_marginTop="44dp" android:layout_alignParentTop="true"
            android:layout_marginBottom="105dp" android:layout_alignBottom="@+id/txt_camptime"
            android:layout_alignParentEnd="true" android:layout_marginEnd="14dp"
            android:background="@drawable/campfire2"/>
    <Button
            android:text="Main Menu"
            android:layout_width="144dp"
            android:layout_height="wrap_content" android:id="@+id/btn_mainmenu" android:fontFamily="monospace"
            android:textSize="18sp" android:textStyle="bold" style="@style/Widget.AppCompat.Button.Borderless"/>
</RelativeLayout>