<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Encounter">

    <Button
            android:text="Quit"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_quit"
            android:layout_marginBottom="152dp"
            android:layout_alignParentBottom="true" android:layout_marginStart="1dp"
            android:layout_alignStart="@+id/btn_load" android:layout_marginEnd="-1dp"
            android:layout_alignEnd="@+id/btn_load" style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="18sp" android:fontFamily="monospace" android:textStyle="bold"/>
    <TextView
            android:text="By: Gareth Aguilar\nArt Design: Josh Aguilar\nDialogue: Mike Tassitanno\nVersion 1.0"
            android:layout_width="205dp"
            android:layout_height="wrap_content" android:id="@+id/txt_version"
            android:layout_alignParentBottom="true" android:layout_marginBottom="12dp"
            android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>
    <Button
            android:text="Load Game"
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_load"
            android:layout_alignParentBottom="true" android:layout_marginBottom="224dp" android:layout_marginEnd="-1dp"
            android:layout_alignEnd="@+id/btn_start" android:layout_marginStart="2dp"
            android:layout_alignStart="@+id/btn_start" style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="monospace"/>
    <Button
            android:layout_width="193dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_start"
            android:text="@string/btn_start"
            android:layout_alignParentEnd="true" android:layout_marginEnd="114dp" android:layout_alignParentStart="true"
            android:layout_marginStart="103dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="296dp" style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="18sp" android:fontFamily="monospace" android:textStyle="bold"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="146dp" app:srcCompat="@drawable/campanimation" android:id="@+id/imageView2"
            android:layout_alignParentBottom="true" android:layout_marginBottom="407dp"/>

</RelativeLayout>