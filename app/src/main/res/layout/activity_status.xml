<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:text="Main Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_player3"
            android:textSize="18sp" android:textAlignment="viewStart"
            android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/img_player2" android:layout_marginStart="15dp"
            android:layout_alignTop="@+id/img_player3" android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="89dp" app:srcCompat="@drawable/adventurer3"
            android:layout_alignParentTop="true" android:layout_marginTop="128dp"
            android:id="@+id/img_player3" android:contentDescription="Main Background"
            android:layout_alignParentStart="true" android:layout_marginStart="21dp"
    />
    <Button
            android:text="Return to Campfire"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_return"
            android:layout_alignParentBottom="true" android:layout_marginBottom="13dp"
            android:layout_alignStart="@+id/txt_main" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:layout_marginEnd="0dp"
            android:layout_alignEnd="@+id/txt_details" style="@style/Widget.AppCompat.Button.Borderless"
            android:textSize="18sp" android:textStyle="bold" android:fontFamily="monospace"/>
    <TextView
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:text="Main Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_player2"
            android:textSize="18sp" android:textAlignment="viewStart"
            android:layout_marginTop="22dp"
            android:layout_toEndOf="@+id/img_player2" android:layout_marginStart="16dp"
            android:layout_below="@+id/img_player3" android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="89dp" app:srcCompat="@drawable/adventurer1"
            android:layout_marginTop="25dp"
            android:id="@+id/img_player2" android:contentDescription="Main Background"
            android:layout_marginStart="1dp"
            android:layout_below="@+id/img_player3" android:layout_alignStart="@+id/img_player3"/>
    <TextView
            android:layout_width="260dp"
            android:layout_height="91dp"
            android:text="Main Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_player1"
            android:textSize="18sp" android:textAlignment="viewStart"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/img_player2" android:layout_marginStart="14dp"
            android:layout_below="@+id/img_player2" android:fontFamily="sans-serif-smallcaps"/>
    <ImageView
            android:layout_width="87dp"
            android:layout_height="89dp" app:srcCompat="@drawable/adventurer2"
            android:layout_marginTop="27dp"
            android:id="@+id/img_player1" android:contentDescription="Main Background"
            android:layout_marginStart="2dp"
            android:layout_below="@+id/img_player2" android:layout_alignStart="@+id/img_player3"/>
    <TextView
            android:text="Resources"
            android:layout_width="match_parent"
            android:layout_height="65dp" android:id="@+id/txt_resources"
            android:layout_above="@+id/btn_return"
            android:layout_marginBottom="11dp" android:textAlignment="center" android:textSize="18sp"
            android:fontFamily="sans-serif-smallcaps" android:textAllCaps="false"/>

</RelativeLayout>