<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateCharacters">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="32dp"
            tools:layout_editor_absoluteX="0dp">

        <EditText
                android:layout_width="match_parent"
                android:layout_height="81dp"
                android:inputType="textPersonName"
                android:text="Adventurer Name #3"
                android:ems="10"
                android:id="@+id/txtinput_2"
                android:layout_alignParentBottom="true" android:layout_marginBottom="174dp"
                android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:inputType="textPersonName"
                android:text="Adventurer Name #2"
                android:ems="10"
                android:id="@+id/txtinput_3"
                android:layout_above="@+id/txtinput_2"
                android:layout_marginBottom="15dp" android:textAlignment="center"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="89dp"
                android:inputType="textPersonName"
                android:text="Adventurer Name #1"
                android:ems="10"
                android:id="@+id/txtinput_1"
                android:layout_above="@+id/txtinput_3" android:layout_marginBottom="5dp"
                android:textAlignment="center"/>
        <Button
                android:text="Back"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back" android:layout_alignTop="@+id/btn_continue"
                android:layout_alignParentStart="true" android:layout_marginStart="57dp"
                style="@style/Widget.AppCompat.Button.Borderless" android:textSize="18sp" android:textStyle="bold"
                android:fontFamily="monospace"/>
        <Button
                android:text="Continue"
                android:layout_width="122dp"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_marginBottom="39dp"
                android:id="@+id/btn_continue" android:layout_alignParentEnd="true" android:layout_marginEnd="55dp"
                style="@style/Widget.AppCompat.Button.Borderless" android:textSize="18sp"
                android:fontFamily="monospace" android:textStyle="bold"/>
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="308dp"
                android:layout_alignParentTop="true" android:layout_marginTop="31dp"
                android:id="@+id/imageView"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                android:layout_above="@+id/txtinput_1" android:layout_marginBottom="35dp"
                app:srcCompat="@drawable/cave" android:scaleType="centerCrop"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>