<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CreateCharacters">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="32dp"
            tools:layout_editor_absoluteX="0dp">

        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 3"
                android:ems="10"
                android:id="@+id/txtinput_2" android:layout_centerHorizontal="true"
                android:layout_above="@+id/txtinput_4"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 2"
                android:ems="10"
                android:id="@+id/txtinput_3"
                android:layout_centerHorizontal="true" android:layout_above="@+id/txtinput_2"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 4"
                android:ems="10"
                android:id="@+id/txtinput_4"
                android:layout_alignParentBottom="true" android:layout_marginBottom="161dp"
                android:layout_centerHorizontal="true"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name 1"
                android:ems="10"
                android:id="@+id/txtinput_1" android:layout_centerHorizontal="true"
                android:layout_above="@+id/txtinput_3"/>
        <Button
                android:text="Back"
                android:layout_width="122dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_back" android:layout_alignTop="@+id/btn_continue"
                android:layout_alignParentStart="true" android:layout_marginStart="57dp"/>
        <Button
                android:text="Continue"
                android:layout_width="122dp"
                android:layout_height="wrap_content" android:layout_alignParentBottom="true"
                android:layout_marginBottom="39dp"
                android:id="@+id/btn_continue" android:layout_alignParentEnd="true" android:layout_marginEnd="55dp"/>
        <ImageView
                android:layout_width="319dp"
                android:layout_height="131dp" app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentTop="true" android:layout_marginTop="19dp"
                android:layout_centerHorizontal="true" android:id="@+id/imageView"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>