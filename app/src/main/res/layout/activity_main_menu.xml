<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainMenu">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="16dp">

        <TextView
                android:text="Adventure Game"
                android:layout_width="289dp"
                android:layout_height="61dp" android:id="@+id/txt_title" android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true" android:layout_marginTop="58dp" android:textAlignment="center"
                android:textSize="30sp"/>
        <Button
                android:text="Quit"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_quit" android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="145dp"/>
        <Button
                android:text="Load Game"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_load"
                android:layout_centerHorizontal="true" android:layout_alignParentBottom="true"
                android:layout_marginBottom="227dp"/>
        <Button
                android:text="Begin"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:id="@+id/btn_start" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
                android:layout_marginTop="210dp"/>
        <TextView
                android:text="By: Gareth Aguilar Version 1.0"
                android:layout_width="122dp"
                android:layout_height="40dp" android:id="@+id/txt_version"
                android:layout_alignParentBottom="true" android:layout_marginBottom="16dp"
                android:layout_alignParentStart="true" android:layout_marginStart="16dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>