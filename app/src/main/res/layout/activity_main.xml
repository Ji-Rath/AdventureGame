<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="348dp"
            android:layout_height="186dp"
            android:text="Main Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentBottom="true" android:layout_marginBottom="140dp" android:id="@+id/txt_main"
            android:textSize="20sp" android:layout_centerHorizontal="true" android:textAlignment="viewStart"/>
    <Button
            android:text="Main1"
            android:layout_width="157dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_main1"
            android:layout_alignParentBottom="true" android:layout_marginBottom="73dp"
            android:layout_alignStart="@+id/txt_main"/>
    <Button
            android:text="Main2"
            android:layout_width="157dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_main2"
            android:layout_alignParentEnd="true" android:layout_marginEnd="24dp"
            android:layout_alignTop="@+id/btn_main1"/>
    <ImageView
            android:layout_width="336dp"
            android:layout_height="192dp" app:srcCompat="@drawable/ic_launcher_background"
            android:layout_alignParentTop="true" android:layout_marginTop="26dp" android:layout_centerHorizontal="true"
            android:id="@+id/img_main" android:contentDescription="Main Background"/>
    <TextView
            android:text="TextView"
            android:layout_width="302dp"
            android:layout_height="39dp" android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp" android:layout_centerHorizontal="true" android:id="@+id/txt_status"
            android:textSize="20sp" android:textAlignment="center"/>

</RelativeLayout>