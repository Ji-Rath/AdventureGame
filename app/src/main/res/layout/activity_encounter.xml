<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
            android:text="Continue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_return"
            android:layout_alignParentBottom="true" android:layout_marginBottom="13dp"
            android:layout_alignStart="@+id/txt_main" android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp" android:visibility="invisible" android:layout_marginEnd="0dp"
            android:layout_alignEnd="@+id/txt_details"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="146dp"
            android:text="Main Text"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/txt_main"
            android:textSize="20sp" android:textAlignment="center" android:layout_marginTop="28dp"
            android:layout_below="@+id/img_main"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_alignParentBottom="true" android:layout_marginBottom="137dp" android:id="@+id/txt_details"
            android:textSize="20sp" android:textAlignment="center"/>
    <Button
            android:text="Main1"
            android:layout_width="164dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_main1"
            android:layout_alignParentBottom="true" android:layout_marginBottom="73dp"
            android:layout_alignStart="@+id/txt_main" android:layout_marginStart="22dp"/>
    <Button
            android:text="Main2"
            android:layout_width="151dp"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="67dp"
            tools:layout_editor_absoluteX="42dp" android:id="@+id/btn_main2"
            android:layout_alignTop="@+id/btn_main1" android:layout_marginTop="0dp"
            android:layout_toEndOf="@+id/btn_main1" android:layout_marginStart="52dp" android:layout_marginBottom="60dp"
            android:layout_alignBottom="@+id/btn_return" android:layout_marginEnd="22dp"
            android:layout_alignEnd="@+id/txt_details"/>
    <ImageView
            android:layout_width="336dp"
            android:layout_height="192dp" app:srcCompat="@drawable/ic_launcher_background"
            android:layout_alignParentTop="true" android:layout_marginTop="26dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/img_main" android:contentDescription="Main Background"/>

</RelativeLayout>